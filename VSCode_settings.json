{
  "materialTheme.accent": "Acid Lime",
  "workbench.colorCustomizations": {
    "editor.background": "#0a0a0f",
    "editor.foreground": "#f7e7e7",
    "editorGroup.border": "#88ba09",
    "statusBar.background": "#5D0FBB",
    "statusBar.noFolderBackground": "#5D0FBB",
    "statusBar.debuggingBackground": "#5D0FBB",
    "activityBarBadge.background": "#C6FF00",
    "list.activeSelectionForeground": "#C6FF00",
    "list.inactiveSelectionForeground": "#C6FF00",
    "list.highlightForeground": "#C6FF00",
    "scrollbarSlider.activeBackground": "#C6FF0050",
    "editorSuggestWidget.highlightForeground": "#C6FF00",
    "textLink.foreground": "#C6FF00",
    "progressBar.background": "#C6FF00",
    "pickerGroup.foreground": "#C6FF00",
    "tab.activeBorder": "#C6FF00",
    "notificationLink.foreground": "#C6FF00",
    "editorWidget.resizeBorder": "#C6FF00",
    "editorWidget.border": "#C6FF00",
    "settings.modifiedItemIndicator": "#C6FF00",
    "settings.headerForeground": "#C6FF00",
    "panelTitle.activeBorder": "#C6FF00",
    "breadcrumb.activeSelectionForeground": "#C6FF00",
    "menu.selectionForeground": "#C6FF00",
    "menubar.selectionForeground": "#C6FF00",
    "statusBar.foreground": "#FFFFFF"
  },
  "workbench.iconTheme": "eq-material-theme-icons-ocean",
  "workbench.colorTheme": "Material Theme Ocean High Contrast",
  "editor.lineHeight": 22,
  "editor.tabSize": 2,
  "workbench.statusBar.visible": true,
  "editor.fontLigatures": true,
  "editor.fontFamily": "'Fira Code Retina'",
  "terminal.integrated.fontFamily": "monospace",
  "editor.wordWrap": "on",
  "editor.minimap.enabled": false,
  "vim.easymotion": true,
  "editor.fontSize": 15,
  "files.autoSave": "afterDelay",
  "editor.formatOnSave": true,
  "files.autoSaveDelay": 1,
  "vim.autoindent": true,
  "vim.overrideCopy": false,
  "vim.easymotionJumpToAnywhereRegex": "\\b[A-Za-z0-9]|[A-Za-z0-9]\\b|_.|#.|[a-z][A-Z]",
  "vim.enableNeovim": true,
  "vim.foldfix": true,
  "vim.hlsearch": true,
  "vim.incsearch": true,
  "vim.ignorecase": true,
  "vim.statusBarColorControl": true,

  // Status bar color when in Insert mode
  "vim.statusBarColors.insert": ["#0F9CBB", "#FFFFFF"],

  // Status bar color when in Normal mode
  "vim.statusBarColors.normal": ["#0FBB38", "#000000"],

  // Status bar color when in Replace mode
  "vim.statusBarColors.replace": ["#BB240F","#FFFFFF"],

  // Status bar color when in Visual mode
  "vim.statusBarColors.visual": ["#5D0FBB","#FFFFFF"],

  "vim.statusBarColors.visualline": ["#5D0FBB","#FFFFFF"],

  // Status bar color when in VisualBlock mode
  "vim.statusBarColors.visualblock": ["#5D0FBB","#FFFFFF"],
  
  "vim.easymotionMarkerYOffset": 5,
  "vim.easymotionMarkerHeight": 15.5,
  "vim.sneak": true,
  "vim.handleKeys": {
    "<C-c>": false, //for copy working
    "<C-n>": false, //for creating new file
    "<C-o>": false, // for opening new file
    "<C-d>": false, // for multicursore to next word
    "<C-u>": false // to undo multicursore
  },
  "git.enableSmartCommit": true,
  "window.zoomLevel": 0.3,
  "workbench.statusBar.feedback.visible": false,
  "liveServer.settings.donotVerifyTags": true
}
