{
  "materialTheme.accent": "Tomato",
  "workbench.colorCustomizations": {
    "editor.background": "#0a0a0f",
    "editor.foreground": "#f7e7e7",
    "statusBar.background": "#858EDF",
    "statusBar.noFolderBackground": "#858EDF",
    "statusBar.debuggingBackground": "#858EDF",
    "activityBarBadge.background": "#F44336",
    "list.activeSelectionForeground": "#F44336",
    "list.inactiveSelectionForeground": "#F44336",
    "list.highlightForeground": "#F44336",
    "scrollbarSlider.activeBackground": "#F4433650",
    "editorSuggestWidget.highlightForeground": "#F44336",
    "textLink.foreground": "#F44336",
    "progressBar.background": "#F44336",
    "pickerGroup.foreground": "#F44336",
    "tab.activeBorder": "#F44336",
    "notificationLink.foreground": "#F44336",
    "editorWidget.resizeBorder": "#F44336",
    "editorWidget.border": "#F44336",
    "settings.modifiedItemIndicator": "#F44336",
    "settings.headerForeground": "#F44336",
    "panelTitle.activeBorder": "#F44336",
    "breadcrumb.activeSelectionForeground": "#F44336",
    "menu.selectionForeground": "#F44336",
    "menubar.selectionForeground": "#F44336",
    "statusBar.foreground": "#000000"
  },
  "workbench.iconTheme": "eq-material-theme-icons-ocean",
  "workbench.colorTheme": "Material Theme Ocean High Contrast",
  "editor.lineHeight": 22,
  "editor.tabSize": 2,
  "workbench.statusBar.visible": true,
  "editor.fontLigatures": true,
  "editor.fontFamily": "'Fira Code Retina'",
  "terminal.integrated.fontFamily": "monospace",
  "editor.wordWrap": "on",
  "editor.minimap.enabled": false,
  "vim.easymotion": true,
  "editor.fontSize": 15,
  "files.autoSave": "afterDelay",
  "editor.formatOnSave": true,
  "files.autoSaveDelay": 1,
  "vim.autoindent": true,
  "vim.overrideCopy": false,
  "vim.easymotionJumpToAnywhereRegex": "\\b[A-Za-z0-9]|[A-Za-z0-9]\\b|_.|#.|[a-z][A-Z]",
  "vim.enableNeovim": true,
  "vim.foldfix": true,
  "vim.hlsearch": true,
  "vim.incsearch": true,
  "vim.ignorecase": true,
  "vim.statusBarColorControl": true,

  // Status bar color when in Insert mode
  "vim.statusBarColors.insert": ["#1E90FF", "#FFFFFF"],

  // Status bar color when in Normal mode
  "vim.statusBarColors.normal": ["#32CD32", "#FFFFFF"],

  // Status bar color when in Replace mode
  "vim.statusBarColors.replace": "#00CED1",

  // Status bar color when in Visual mode
  "vim.statusBarColors.visual": ["#858EDF","#000000"],

  "vim.statusBarColors.visualline": ["#858EDF","#000000"],

  // Status bar color when in VisualBlock mode
  "vim.statusBarColors.visualblock": ["#858EDF","#000000"],
  
  "vim.easymotionMarkerYOffset": 5,
  "vim.easymotionMarkerHeight": 15.5,
  "vim.sneak": true,
  "vim.handleKeys": {
    "<C-c>": false, //for copy working
    "<C-n>": false, //for creating new file
    "<C-o>": false, // for opening new file
    "<C-d>": false, // for multicursore to next word
    "<C-u>": false // to undo multicursore
  },
  "git.enableSmartCommit": true,
  "window.zoomLevel": 0.3
}
